  <!--Ohio Ordnance REAPR-->
  <ThingDef ParentName="HIDGun_MainWeaponBase_Makeable">
    <defName>HIDGun_REAPR</defName>
    <label>REAPR</label>
    <description>A cross between a light machine gun and a sniper rifle, the REAPR is designed to easily switch between suppressive fire and long distance precision shooting roles. Comes equipped with an advanced scope and a suppressor.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/OhioOrdnance_REAPR</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.595,1.595)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <generateCommonality>0.5</generateCommonality>
    <equippedDistanceOffset>0.2</equippedDistanceOffset>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <statBases>
      <WorkToMake>52500</WorkToMake>
      <Mass>12.01</Mass>
      <AccuracyTouch>0.70</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>2.3</RangedWeapon_Cooldown>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>0.4</ShootingAccuracyPawn>
      <AimingDelayFactor>-0.10</AimingDelayFactor>
      <HuntingStealth>0.5</HuntingStealth>
    </equippedStatOffsets>
    <costList>
      <Steel>95</Steel>
      <Chemfuel>15</Chemfuel>
      <ComponentIndustrial>10</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>HIDBullet_338LapuaLMG</defaultProjectile>
        <warmupTime>3.5</warmupTime>
        <range>44.9</range>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <burstShotCount>5</burstShotCount>
        <soundCast>HID_Shot_338Lapua_Suppressed</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>3</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
      <li>GTEK_OhioOrdnance_REAPR</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
